@using Online_Learning_Web.Models
@model Online_Learning_Web.Models.Lesson
<a asp-action="Edit" asp-route-id="@ViewBag.courseID">Back</a>
<h1>Edit chapter</h1>

<h2>List Lesson</h2>

<p>
    <a asp-action="CreateLesson" asp-route-id="@ViewBag.id" >Create New</a>
</p>
<input value="@ViewBag.id" name="id" hidden/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Lesson item in ViewBag.listLesson)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <a asp-action="EditLesson" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="DeleteLesson" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>