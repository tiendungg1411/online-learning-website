@model Online_Learning_Web.Models.Lesson


<form id="f" asp-action="EditLesson">
    <input asp-for="ID" value="@Model.ID" name="id" hidden />
    <br />
    <label asp-for="Name">Name:</label>
    <input asp-for="Name" type="text" style="width: 635px; height: 30px;" value="@Model.Name" required /><br /><br />

    <label asp-for="Link">Link:</label>
    <input asp-for="Link" type="text" style="width: 635px; height: 30px;" value="@Model.Link" required />
    <br />

    <h3>Type</h3>
    <select style="margin-right: 20px;" class="btn btn-info" name="Type">
        <option asp-for="Type" value="-1">Select a Type</option>
        <!option asp-for="Type" value="practive" @(Model.Type.Equals("practive") ? "selected" : "")>Quiz</!option>
        <!option asp-for="Type" value="video" @(Model.Type.Equals("video") ? "selected" : "")>Video</!option>
    </select>
    <br /><br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>